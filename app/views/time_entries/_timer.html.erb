<%= form_tag item, :method => :put do %>
  <% if item.timer_running? %>
    <%= hidden_field_tag :stop, true %>
    <%= submit_tag "stop" %>
  <% elsif item.timer_complete? %>
    <%= submit_tag "disabled", :disabled => true %>
  <% else %>
    <%= hidden_field_tag :start, true %>
    <%= submit_tag "start" %>
  <% end %>
<% end %>

