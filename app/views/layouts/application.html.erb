<!DOCTYPE html>
<html>
<head>
  <title>Whatatime</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <%= content_tag :p, notice, :class => "notice" if notice %>
  <%= content_tag :p, alert, :class => "alert" if alert %>

  <div id="app">
    <header>
      <%= render partial: "shared/user_navigation" %>
      <h1><%= link_to "Whatatime", root_url %></h1>
      <p><%= CatchPhrase.random.html_safe %></p>
      <%= render partial: "shared/site_navigation" %>
    </header>
    <%= yield %>
  </div>

</body>
</html>

